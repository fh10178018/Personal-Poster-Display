.hint-wrap{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: rgba(0,0,0,.6);
}
.hint-content{
  position: absolute;
  margin: 0 auto;
  left: 0;
  top: 50%;
  right: 0;
  transform: translateY(-100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.hint-title{
  color: white;
  font-size: 50rpx;
  font-size: 33rpx;
  font-weight: 500;
}
.slider-icon{
  height: 220rpx;
  width: 300rpx;
}